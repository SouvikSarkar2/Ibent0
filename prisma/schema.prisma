generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  attendees   Int
  color       String
  date        String 
  description String?
  duration    Int
  hr          Int
  mn          Int
  remainder   Boolean
  title       String
  type        String
  user        User   @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId
  createdAt   String
}

model User {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  color  String
  email  String
  events Event[]
  img    String?
  name   String
  status String
}
